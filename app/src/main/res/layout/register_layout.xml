<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv001"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"

        app:srcCompat="@drawable/user003" />

    <EditText
        android:id="@+id/et_reg_name"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:hint="Name"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv001"
        android:drawableLeft="@drawable/ic_action_loginn"/>

    <EditText
        android:id="@+id/et_reg_email"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/iv001"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/ic_action_mail"/>

    <EditText
        android:id="@+id/et_reg_password"
        android:layout_below="@+id/iv001"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:drawableLeft="@drawable/ic_action_pass"/>
    <EditText
        android:id="@+id/et_reg_passwordcon"
        android:layout_below="@+id/iv001"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:singleLine="true"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:hint="Re-enter Password"
        android:drawableLeft="@drawable/ic_action_pass"/>
    />
    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv001"
        android:layout_marginTop="310dp"
        android:text="Register"
        android:textSize="25dp"
        android:textColor="#ffffff"
        android:background="@drawable/button_rectangle"/>


</RelativeLayout>