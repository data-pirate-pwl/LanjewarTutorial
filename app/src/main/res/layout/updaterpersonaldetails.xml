<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <TextView
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:singleLine="true"
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Username : " />

            <TextView
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:singleLine="true"
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:hint="Username"
               />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">


            <TextView
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:singleLine="true"
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Unique Identification Number :" />

            <EditText
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:singleLine="true"
                android:id="@+id/uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number"
                android:hint="Unique Identification Number"
                />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <TextView
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:singleLine="true"
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Name : "
                />

            <EditText
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:singleLine="true"
                android:id="@+id/sname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:hint="Name"
                />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <TextView
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:singleLine="true"

                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Father's Name :" />

            <EditText
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:singleLine="true"
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:hint="Father's Name"
                />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <TextView
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:singleLine="true"
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Mother's Name" />

            <EditText
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:singleLine="true"
                android:id="@+id/mname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:hint="Mother's Name"
                />

        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

            <TextView
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:singleLine="true"
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Last Name" />

            <EditText
                android:textColor="#ffffff"
                android:textSize="19dp"
                android:singleLine="true"
                android:id="@+id/lname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none"
                android:hint="Last Name"
                />
        </LinearLayout>
        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">

                    <TextView

                        android:textColor="#ffffff"
                        android:textSize="16dp"
                        android:singleLine="true"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Gender : " />
                    <RadioGroup
                        android:id="@+id/gen"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >
                <RadioButton
                    android:textColor="#ffffff"
                    android:textSize="19dp"
                    android:singleLine="true"
                    android:layout_toEndOf="@+id/textView2"
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male" />

                <RadioButton
                    android:textColor="#ffffff"
                    android:textSize="19dp"
                    android:singleLine="true"
                    android:id="@+id/female"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female" />
                    </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#ffffff"
                    android:textSize="19dp"
                    android:singleLine="true"

                    android:layout_marginBottom="0dp"
                    android:id="@+id/tex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text=" Date of Birth : " />
                <TextView
                    android:layout_toEndOf="@+id/tex"
                    android:textColor="#ffffff"
                    android:textSize="19dp"
                    android:singleLine="true"
                    android:id="@+id/date_of_birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:drawableLeft="@drawable/ic_action_dateee"
                    android:text=" dd/mm/yyyy"
                    android:inputType="text"
                    />
            </RelativeLayout>



        </LinearLayout>

        <LinearLayout android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="fill_parent">
            <Button
                android:id="@+id/submit"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20sp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:background="@drawable/button_rectangle"
                android:textColor="#ffffff"
                android:text="Submit"
                android:textSize="25dp"/>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>